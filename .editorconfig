# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_size = 4

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[docker-compose.yml]
indent_size = 4

[*.{ts,tsx,js,jsx}]
indent_size = 2
quote_type = single
max_line_length = 120
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
indent_size = 2

[*.env]
trim_trailing_whitespace = false
insert_final_newline = false
